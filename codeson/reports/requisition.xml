<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
      <report id="codeson_requisicion" paperformat = "codeson.paperformat" model="purchase.requisition" string="Requisición" report_type="qweb-pdf" name="codeson.report_requisicion" file="codeson.report_requisicion" print_report_name = "('Requisición - '+object.name+'.pdf')"  />
      <template id="report_requisicion">
         <t t-name="codeson.report_requisicion">
         <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
               <t t-call="web.external_layout_req_header">
                  <div class="page">
                     <div class="oe_structure"/>
                     <div class="row mt32 mb32">
                        <div class="col-xs-6" style="text-transform: uppercase;">
                           <strong>Dirección:</strong>
                           <span t-field="o.unidad_administrativa"/>
                           <br/>
                           <strong>Instalación:</strong>
                           <span t-field="o.instalacion"/>
                        </div>
                        <div class="col-xs-6" style="text-transform: uppercase;">
                           <strong>Autoriza:</strong>
                           <span t-field="o.autoriza"/>
                           <br/>
                           <strong>Servicio requerido:</strong>
                           <span t-field="o.servicio_requerido"/>
                        </div>
                     </div>
                     <br/>
                     <br/>
                     <table class="table table-condensed" style="margin-top:45px;text-transform: uppercase;">
                        <thead>
                           <tr>
                              <th>
                                 <strong>Partida</strong>
                              </th>
                              <th>
                                 <strong>Descripción</strong>
                              </th>
                              <th>
                                 <strong>Unidad</strong>
                              </th>
                              <th class="text-right">
                                 <strong>Cantidad</strong>
                              </th>
                           </tr>
                        </thead>
                        <tbody>
                           <tr t-foreach="o.line_ids" t-as="order_line">
                              <td>
                                 <span t-field="order_line.product_id.obj_gasto"/>
                              </td>
                              <td>
                                 <span t-field="order_line.product_id.name"/>
                                 <br/>
                                 <small>
                                    <span t-field="order_line.detalles"/>
                                 </small>
                              </td>
                              <td class="text-right">
                                 <span t-field="order_line.unidad_medida"/>
                              </td>
                              <td class="text-right">
                                 <span t-field="order_line.product_qty"/>
                              </td>
                           </tr>
                        </tbody>
                     </table>
                     <div class="oe_structure"/>
                     <div class="footer">
                        <div class="col-xs-6 text-center">
                           <h4 style="text-transform: uppercase;"><span t-field="o.solicita.saludo"/> <span t-field="o.solicita.name"/></h4>
                           <br/>
                           <b>_______________________________</b>
                           <br/>
                           <span style="font-size:x-small">
                             <span t-field="o.solicita.job_id" style="text-transform: uppercase;"/><br/>
                             SOLICITANTE
                           </span>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1 text-center">
                           <h4 style="text-transform: uppercase;">
                              <span t-field="o.autoriza.saludo"/>
                              <span t-field="o.autoriza.name"/>
                           </h4>
                           <br/>
                           <b>_________________________________</b>
                           <br/>
                           <span style="font-size:x-small">
                             <span t-field="o.solicita.job_id" style="text-transform: uppercase;"/><br/>AUTORIZACIÓN DE DIRECTOR DE ÁREA SOLICITANTE
                           </span>
                        </div>
                        <div class="col-xs-12 text_center">
                          <br/>
                        <hr style="padding: 0px; margin: 0px;"/>
                        <p style="font-size:x-small; color:#505050">Comisión del Deporte del Estado de Sonora. Blvr. Solidaridad No. 404, Col. Álvaro Obregón.<br/>
 Hermosillo, Sonora. C.P. 83170. Teléfonos: (662) 26018 50 y (662) 260 20 97.</p>
</div>
                     </div>
                  </div>
               </t>
            </t>
         </t>
      </t>
      </template>
   </data>
</odoo>
